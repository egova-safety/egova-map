{
    "include": 
    [
        "src/*"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compilerOptions": 
    {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"],
            "@/*": ["src/*"],
            "views/*": ["src/views/*"]
        },
        "lib": 
        [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    }
}
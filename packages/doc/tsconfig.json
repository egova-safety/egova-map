{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "stripInternal": true,
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noEmitHelpers": false,
        "declarationDir": "./types",
        "baseUrl": "./",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,

        "esModuleInterop": true,

        "sourceMap": true,

        "types": [
            "node", "webpack-env"
        ],
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "paths": {
            "*": ["types/*"],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules/**"
    ]
}

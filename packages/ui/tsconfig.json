{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "stripInternal": true,
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": false,
        "baseUrl": "./",
        "declaration": true, // 是否生成声明文件
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],

        "types": [
            "node", "webpack-env"
        ],
        "paths": {
            "*": ["types/*"],
            "doc/*": [
                "doc/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"

    ],
    "exclude": [
        "dist",
        "node_modules/**"
    ]
}
